<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="android:background">#669999</item>
    </style>

    <!-- Regular text heading to be used at the top of activity views -->
    <style name="TextHeading">
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- Regular button styles -->
    <style name="UdacityButton" parent="@android:style/TextAppearance.Small">
        <item name="android:textColor">#000000</item>
        <item name="android:background">#F08C35</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <!--  -->
    <style name="SpecialButton" parent="@android:style/TextAppearance.Small">
        <item name="android:textColor">#F08C35</item>
        <item name="android:background">#000000</item>
        <item name="android:textAllCaps">false</item>
    </style>

</resources>
